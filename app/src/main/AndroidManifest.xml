<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybilling">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:allowBackup="true"
        android:exported="true"
        android:icon="@mipmap/bill"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".qrscan"></activity>
        <activity android:name=".InvoicePage" />
        <activity android:name=".CustomerPage" />
        <activity android:name=".ProductDisplay" />
        <activity android:name=".EditDetails" />
        <activity android:name=".EditProducts" />
        <activity android:name=".DisplayProducts" />
        <activity android:name=".DisplaySeller" />
        <activity android:name=".AddSeller" />
        <activity android:name=".AddProduct" />
        <activity android:name=".AdminPage" />
        <activity android:name=".BillProduct" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>